    <local:AvailableTimeBrushMap.DefaultBrush>
        <local:DayBrush>
            <local:DayBrush.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#66B3B3B3" Offset="0" />
